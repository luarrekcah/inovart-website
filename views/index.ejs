<script>
document.getElementById("contactSend").addEventListener("click", () => {
  if(document.getElementById('name').value == '' || document.getElementById('contactMessage').value == '') return;
  
  location.href = `https://api.whatsapp.com/send?phone=<%= b_linkWpp %>&text=Olá, me chamo ${document.getElementById('name').value}.
  
  ${document.getElementById('contactMessage').value}`
});
</script>

