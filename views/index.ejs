                <p><%= b_phoneNumber %></p>
              </div>

              <div class="phone">
                <i class="bi bi-building"></i>
                <h4>CNPJ:</h4>
                <p><%= b_cnpj %></p>
              </div>

            </div>

          </div>

          <div class="col-lg-8 mt-5 mt-lg-0">

            <form role="form" class="php-email-form" data-aos="fade-left">
              <div class="row">
                <div class="form-group mt-3">
                  <input type="text" name="name" class="form-control" id="name" placeholder="Seu nome" required>
                </div>
                
              </div>
              <div class="form-group mt-3">
                <textarea class="form-control" name="message" rows="5" id="contactMessage" placeholder="Mensagem" required></textarea>
              </div>
              <div class="text-center"><button type="submit" id="contactSend">Enviar Mensagem</button></div>
            </form>

          </div>

        </div>

      </div>
    </section><!-- End Contact Section -->

