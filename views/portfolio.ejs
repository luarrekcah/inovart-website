<%- include('partials/header.ejs')-%>


  <!-- ======= Portfolio Section ======= -->
  <section id="portfolio" class="portfolio">
    <div class="container">
      <div class="section-title" data-aos="fade-up">
        <h2>Portfólio</h2>
        <p>Todos os nossos trabalhos mais recentes</p>
      </div>

      <div class="row" data-aos="fade-up" data-aos-delay="100">
        <div class="col-lg-12 d-flex justify-content-center">
          <ul id="portfolio-flters">
            
            <li class="filter-active" data-filter=".filter-fachada">Fachadas</li>
            <li data-filter=".filter-banner">Banners</li>
            <li data-filter=".filter-adesivo">Adesivos</li>
            <li data-filter=".filter-perfurado">Perfurados</li>
            <li data-filter=".filter-visitCard">Cartão visita</li>
            <li data-filter=".filter-other">Outros</li>
          </ul>
        </div>
      </div>

      <div
        class="row portfolio-container"
        data-aos="fade-up"
        data-aos-delay="200"
      >
        <% for(let i =0; i<b_produtos.length; i++) { %> 
        <div class="col-lg-4 col-md-6 portfolio-item filter-<%= b_produtos[i].category.toLowerCase() %>">
          <div class="portfolio-wrap">
            <img
              src="<%= b_produtos[i].photos[0] %>"
              class="img-fluid"
              alt=""
            />
            <div class="portfolio-info">
              <h4><%= b_produtos[i].name %></h4>
              <p><%= b_produtos[i].details %></p>
              <div class="portfolio-links">
                <a
                  href="<%= b_produtos[i].photos[0] %>"
                  data-gallery="portfolioGallery"
                  class="portfolio-lightbox"
                  title="<%= b_produtos[i].name %>"
                  ><i class="bx bx-plus"></i
                ></a>
                <a href="/produto/<%= b_produtos[i].id %>" title="Mais detalhes"
                  ><i class="bx bx-link"></i
                ></a>
              </div>
            </div>
          </div>
        </div>
        <% } %>

      </div>
    </div>
  </section>
  <!-- End Portfolio Section -->


<%- include('partials/footer.ejs')-%>
